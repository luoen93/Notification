    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_nofi"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/vfamily" />

    <TextView
